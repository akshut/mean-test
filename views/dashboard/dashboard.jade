extends ../layout
include ./session

block content
  - isDemo = isDemo || false
  script(src="/js/dashboard.js")
  
  #dash-button
    #dash-arrow.dash-arrow-open
  .row.dash
    #rooms.col-lg-2.droptop
      for room in rooms
        .row
          .room(id=room.slug)
            .roomname
              i.glyphicon.glyphicon-user#dricon
              h2= room.name
            h4 Waiting Patients
            i.glyphicon.glyphicon-chevron-down#waitingchev
            ul.session-list
              if room.sessions
                for session in room.sessions
                  +session(session)
            script.
              listenForSessionsOnRoom(!{JSON.stringify(room)}, !{isDemo})
    .col-lg-8.droptop
      form
        .errors
        textarea.js-st-instance
  #myPublisherDiv
  #theirPublisherDiv
  #active-chat

  script.
    $("#dash-arrow").on('click', function() { 
      $(".dash").addClass("dash-closed");
      $("#dash-arrow").addClass("dash-arrow-closed");
      $("#dash-arrow").removeClass("dash-arrow-open");
      console.log("clicked");
    });
    SirTrevor.DEBUG = true
    new SirTrevor.Editor({ el: $('.js-st-instance'), blockTypes: ["Text", "Image", "Video"] })
 
