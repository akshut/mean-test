extends ../layout
include ./session

block content
  include ../includes/navbar
  script(src="/js/dashboard.js")
  h1 Dashboard

  #rooms
    for room in rooms
      .room(id=room.slug)
        h2= room.name
        h4 Waiting Patients
        ul.session-list
          if room.sessions
            for session in room.sessions
              +session(session)

      script.
        listenForSessionsOnRoom(!{JSON.stringify(room)})
