extends ../layout
include ./session

block content
  include ../includes/navbar
  script(src="/js/dashboard.js")

  .col-lg-12
    #video
      #theirPublisherDiv
    .row
      #rooms.col-lg-3
        for room in rooms
          .row
            .room(id=room.slug)
              h2= room.name
              h4 Waiting Patients
              ul.session-list
                if room.sessions
                  for session in room.sessions
                    +session(session)
              script.
                listenForSessionsOnRoom(!{JSON.stringify(room)})
      //-
        .col-md-8
          form
            .errors
            textarea.js-st-instance
        .col-md-2
          #myPublisherDiv

        #diagnostic
          img(src='http://www.uh.edu/engines/sound-wave.jpg', width='125px')

        include ../includes/chatbox

        script.
          SirTrevor.DEBUG = true
          new SirTrevor.Editor({ el: $('.js-st-instance'), blockTypes: ["Text", "Image", "Video"] })
