extends ../layout
include ./session

block content
  - isDemo = isDemo || false
  script(src="/js/dashboard.js")

  .row.dash
    #dash-button
      #dash-arrow.dash-arrow-open
    #rooms.col-lg-2.droptop.side-dash.dash-open
      for room in rooms
        .row
          .logotab
            a(href='/')
              img(src='/img/doxyme-logo-blk.png', height='40', alt='Doxy.me')
          .room(id=room.slug)
            .roomname
              i.glyphicon.glyphicon-user#dricon
              h2= room.name
            h4 Waiting Patients
            i.glyphicon.glyphicon-chevron-down#waitingchev
            ul.session-list
              if room.sessions
                for session in room.sessions
                  +session(session)
            script.
              listenForSessionsOnRoom(!{JSON.stringify(room)}, !{isDemo})
    .col-lg-8.trevor
      form
        .errors
        textarea.js-st-instance
  #myPublisherDiv
  #theirPublisherDiv
  #active-chat

  script.
    $("#dash-arrow").on('click', function() {
      $(".side-dash").toggleClass("dash-closed dash-open");
      $("#dash-arrow").toggleClass("dash-arrow-closed");
    });
    SirTrevor.DEBUG = true
    new SirTrevor.Editor({ el: $('.js-st-instance'), blockTypes: ["Text", "Image", "Video"] })

