extends ../layout
include ./session

block content
  include ../includes/navbar
  script(src="/js/dashboard.js")

  .row
    #rooms.col-lg-2
      for room in rooms
        .row
          .room(id=room.slug)
            h2= room.name
            h4 Waiting Patients
            ul.session-list
              if room.sessions
                for session in room.sessions
                  +session(session)
            script.
              listenForSessionsOnRoom(!{JSON.stringify(room)})
    .col-lg-8
      form
        .errors
        textarea.js-st-instance
  #myPublisherDiv
  #theirPublisherDiv
  #active-chat

  script.
    SirTrevor.DEBUG = true
    new SirTrevor.Editor({ el: $('.js-st-instance'), blockTypes: ["Text", "Image", "Video"] })
