extends ../layout

block content
  .col-lg-4.col-lg-offset-4
        h1.logintitle.text-center Sign In
        form.signin.form-horizontal(action="/i/signin", method="post")
          p.error= message
          input(type='hidden', name='_csrf', value=csrf_token)
          .form-group
            label.control-label.col-lg-2(for='email') Email
            .col-lg-12
              input#email.form-control(type='email', name="email", placeholder='Email')

          .form-group
            label.control-label.col-lg-2(for='password') Password
            .col-lg-12
              input#password.form-control(type='password', name="password", placeholder='Password')

          .checkbox
              input(type='checkbox', name='rememberme', value='Remember Me')
              p Remember Me

          button.btn.btn-signin(type='submit') Sign In
          //- &nbsp;
          //- | or&nbsp;
  .col-lg-4.col-lg-offset-4
        h1.logintitle.text-center Sign Up
        form.signin.form-horizontal(action="/i/signup", method="post")
          p.error= message
          input(type='hidden', name='_csrf', value=csrf_token)
          .form-group
            label.control-label.col-lg-2(for='email') Email
            .col-lg-12
              input#email.form-control(type='email', name="email", placeholder='Email')

          .form-group
            label.control-label.col-lg-2(for='name') Full Name
            .col-lg-12
              input#fullname.form-control(type='text', name="fullname", placeholder='Full Name')

          button.btn.btn-signin(type='submit') Request Access
