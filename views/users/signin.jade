extends ../layout

block content
  .col-lg-4.col-lg-offset-4.tk-freight-sans-pro
        #signin-logo
          a(href='/')
            img(src='/img/doxyme-logo-blk.png', alt='Doxy.me')
        h1.logintitle.text-center.tk-freight-sans-pro Sign In
        form.signin.form-horizontal.tk-freight-sans-pro(action="/i/signin", method="post")
          p.error= message
          input(type='hidden', name='_csrf', value=csrf_token)
          .form-group
            label.control-label.col-lg-2(for='email') Email
            .col-lg-12
              input#email.form-control(type='email', name="email", placeholder='Email')

          .form-group
            label.control-label.col-lg-2(for='password') Password
            .col-lg-12
              input#password.form-control(type='password', name="password", placeholder='Password')

          .checkbox
              input(type='checkbox', name='rememberme', value='Remember Me')
              p Remember Me

          button.btn.btn-signin(type='submit') Sign In

          #forgot-password
            a(href='#') Forgot Password?
          #forgot-password
            a(href='/i/signup') Sign Up
